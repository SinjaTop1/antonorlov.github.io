    <script>
      // Performance-optimized intersection observer
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      // Debounced scroll handler for better performance
      let scrollTimeout: number | null = null;
      const handleScroll = () => {
        if (scrollTimeout) return;
        
        scrollTimeout = requestAnimationFrame(() => {
          // Handle any scroll-dependent operations here
          scrollTimeout = null;
        });
      };

      // Optimized intersection observer with performance considerations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Use requestAnimationFrame for smooth animations
            requestAnimationFrame(() => {
              entry.target.classList.add('animate-in');
            });
            // Unobserve after animation to improve performance
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Document ready with performance optimizations
      document.addEventListener('DOMContentLoaded', () => {
        // Smooth scrolling for anchor links with performance optimization
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          (anchor as HTMLAnchorElement).addEventListener('click', function (e: Event) {
            e.preventDefault();
            const href = (this as HTMLAnchorElement).getAttribute('href');
            if (href) {
              const target = document.querySelector(href);
              if (target) {
                // Use smooth scrolling with reduced motion check
                const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                target.scrollIntoView({
                  behavior: prefersReducedMotion ? 'auto' : 'smooth',
                  block: 'start'
                });
              }
            }
          }, { passive: true });
        });

        // Observe elements for animation with performance optimization
        const elementsToObserve = document.querySelectorAll('.section-header, .project-info, .project-visual, .value-item');
        elementsToObserve.forEach(el => {
          // Add will-change for GPU acceleration
          (el as HTMLElement).style.willChange = 'transform, opacity';
          observer.observe(el);
        });

        // Scroll indicator functionality with performance optimization
        const scrollIndicator = document.querySelector('.scroll-indicator');
        const currentProjectSection = document.querySelector('#current-project');
        if (scrollIndicator && currentProjectSection) {
          scrollIndicator.addEventListener('click', () => {
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
            currentProjectSection.scrollIntoView({
              behavior: prefersReducedMotion ? 'auto' : 'smooth'
            });
          }, { passive: true });
        }

        // Preload critical animations
        const criticalElements = document.querySelectorAll('.hero-text, .hero-visual');
        criticalElements.forEach(el => {
          (el as HTMLElement).style.willChange = 'transform, opacity';
        });

        // Clean up will-change after animations complete
        setTimeout(() => {
          elementsToObserve.forEach(el => {
            (el as HTMLElement).style.willChange = 'auto';
          });
          criticalElements.forEach(el => {
            (el as HTMLElement).style.willChange = 'auto';
          });
        }, 3000);

        // Add passive scroll listener for performance
        window.addEventListener('scroll', handleScroll, { passive: true });
      });

      // Cleanup on page unload
      window.addEventListener('beforeunload', () => {
        observer.disconnect();
        window.removeEventListener('scroll', handleScroll);
        if (scrollTimeout) {
          cancelAnimationFrame(scrollTimeout);
        }
      });
    </script>
