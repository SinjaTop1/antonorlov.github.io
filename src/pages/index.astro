  body {
    font-family: var(--font-primary);
    background-color: var(--primary-bg);
    color: var(--primary-text);
    line-height: 1.6;
    overflow-x: hidden;
    /* GPU acceleration */
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section - Optimized for performance */
  .hero {
    min-height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    background: radial-gradient(ellipse at top, rgba(211, 143, 65, 0.15) 0%, transparent 50%),
