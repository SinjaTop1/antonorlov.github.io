---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
import DownloadCVButton from '../components/DownloadCVButton.astro';
---

<BaseLayout title={`About | ${SITE_TITLE}`}>
  <Header />
  <main class="cv-page">
    <section class="cv-hero">
      <div class="cv-hero-overlay"></div>
      <div class="cv-hero-content container">
        <div class="profile-section">
          <div class="profile-image">
            <img src="/about-photo.jpg" alt="Anton Orlov" />
          </div>
          <div class="profile-info">
            <h1>Anton Orlov</h1>
            <p class="profile-title">Entrepreneur & Business Administration Student</p>
            <p class="profile-subtitle">Webster University Vienna</p>
            <DownloadCVButton />
          </div>
        </div>
      </div>
    </section>
    
    <section class="cv-content">
      <div class="container">
        <div class="cv-grid">
          <div class="cv-main">
            <section class="profile-summary">
              <h2>Profile</h2>
              <p>
                Enthusiastic and adaptable BA candidate (Webster University Vienna, May 2025) with a strong foundation in finance and hands-on entrepreneurial experience. Proven ability to design and streamline processes, lead teams and implement sustainable AI-driven solutions. Eager to bring fresh perspectives and cost-saving optimizations to a forward-thinking European company.
              </p>
            </section>

            <section class="experience">
              <h2>Entrepreneurial Experience</h2>
              
              <div class="experience-item">
                <div class="experience-header">
                  <h3>Co-Founder & CEO</h3>
                  <span class="company">BSC, Vienna, Austria</span>
                  <span class="date">Jan 2025 – Present</span>
                </div>
                <ul class="achievement-list">
                  <li>Conceptualized and launched interactive business-learning events for 100+ students, integrating live workshops, networking sessions and AI-powered analytics.</li>
                  <li>Developed a 4-5 week business mentorship course with top entrepreneurs as mentors, guiding students to create their MVPs. The program leverages AI as a tool for efficiency and insight, but is focused on practical business building and mentorship.</li>
                  <li>Organized end-to-end event processes—vendor sourcing, scheduling, marketing—achieving 95% participant satisfaction in pilot events.</li>
                  <li>Lead a cross-functional team of 5 peers; instituted weekly KPI reviews and streamlined communications, reducing planning time by 30%.</li>
                </ul>
              </div>

              <div class="experience-item">
                <div class="experience-header">
                  <h3>Founder & Managing Director</h3>
                  <span class="company">Olive Crown Estate, Girne Cyprus</span>
                  <span class="date">Mar 2022 – Mar 2023</span>
                </div>
                <ul class="achievement-list">
                  <li>Established and operated a boutique agency specializing in residential property sales and rentals.</li>
                  <li>Negotiated contracts and managed client relationships.</li>
                  <li>Implemented CRM and automated workflow systems to track leads, appointments and document management, cutting administrative overhead by 40%.</li>
                  <li>Coordinated remote and local teams, honing organizational skills and fostering a collaborative culture.</li>
                </ul>
              </div>
            </section>

            <section class="interests">
              <h2>Interests & Extracurriculars</h2>
              <ul class="interest-list">
                <li>Gym & Fitness: Active gym-goer, climbing enthusiast, and participant in combat sports</li>
                <li>AI Community Engagement: Attendee and volunteer at local Vienna AI meetups</li>
              </ul>
            </section>
          </div>

          <div class="cv-sidebar">
            <section class="education">
              <h2>Education</h2>
              <div class="education-item">
                <h3>Bachelor of Business Administration</h3>
                <span class="institution">Webster University Vienna, Austria</span>
                <span class="date">Expected May 2026</span>
                <p class="gpa">Current GPA: 3.5/4</p>
                <div class="coursework">
                  <h4>Relevant Coursework:</h4>
                  <ul>
                    <li>Financial Analysis</li>
                    <li>Business Process Management</li>
                    <li>Data Analytics</li>
                    <li>AI in Business</li>
                  </ul>
                </div>
              </div>

              <div class="education-item">
                <h3>Finance Studies (3 years completed)</h3>
                <span class="institution">Financial University, Moscow</span>
                <span class="date">2019 – 2022</span>
                <p>Completed three years toward a Bachelor in Finance; foundational expertise in corporate finance, risk management and financial modelling.</p>
              </div>
            </section>

            <section class="skills">
              <h2>Key Skills</h2>
              <div class="skills-grid">
                <div class="skill-category">
                  <h3>Process Optimization</h3>
                  <p>Mapping, automation and continuous improvement of business workflows.</p>
                </div>
                <div class="skill-category">
                  <h3>AI & Data Literacy</h3>
                  <p>Applying machine learning tools for predictive insights and sustainable operations.</p>
                </div>
                <div class="skill-category">
                  <h3>Project & Event Management</h3>
                  <p>End-to-end planning, budgeting and execution of student-focused programs.</p>
                </div>
                <div class="skill-category">
                  <h3>Leadership & Collaboration</h3>
                  <p>Guiding small teams, setting clear objectives and nurturing professional growth.</p>
                </div>
              </div>
            </section>

            <section class="languages">
              <h2>Languages</h2>
              <ul class="language-list">
                <li>Russian (native)</li>
                <li>English (fluent)</li>
                <li>Spanish (basic)</li>
                <li>German (basic)</li>
              </ul>
            </section>
          </div>
        </div>
      </div>
    </section>
    
    <section class="cta-section">
      <div class="container">
        <h2>Why I'm a Fit</h2>
        <p>
          As both a student and entrepreneur, I thrive on learning and adapting. My hands-on ventures demonstrate a pragmatic approach to optimizing resources and implementing AI to drive efficiency. I am excited to contribute a fresh, analytical mindset—and genuine humility—to a European team seeking sustainable, cost-effective innovations.
        </p>
        <div class="cta-buttons">
          <a href="mailto:orlovantonle@gmail.com" class="cta-button primary">Email Me</a>
          <a href="https://www.linkedin.com/in/anton-orlov-b16126269/" class="cta-button secondary" target="_blank">Connect on LinkedIn</a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .cv-page {
    background-color: #161616;
    color: #ffffff;
    min-height: 100vh;
    padding-top: 72px;
    font-family: 'Montserrat', sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section */
  .cv-hero {
    position: relative;
    min-height: 400px;
    background: linear-gradient(135deg, #232526 0%, #414345 100%);
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .cv-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(100, 21, 95, 0.3), rgba(211, 143, 65, 0.3));
    z-index: 1;
    animation: gradientShift 8s ease infinite alternate;
  }

  @keyframes gradientShift {
    0% { opacity: 0.3; }
    100% { opacity: 0.7; }
  }

  .cv-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(22, 22, 22, 0.55);
    z-index: 1;
  }

  .cv-hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .profile-section {
    display: flex;
    align-items: center;
    gap: 3rem;
    padding: 3rem 0;
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.5s ease, box-shadow 0.5s ease;
  }

  .profile-image:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 30px rgba(211, 143, 65, 0.4);
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .profile-image:hover img {
    transform: scale(1.1);
  }

  .profile-info h1 {
    font-size: 3.5rem;
    margin: 0;
    font-weight: 700;
    background: linear-gradient(270deg, #d38f41, #ff6600, #64155f);
    background-size: 200% 200%;
    animation: gradientAnimation 5s ease infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  @keyframes gradientAnimation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .profile-title {
    font-size: 1.5rem;
    margin: 0.5rem 0;
    color: #ffffff;
    opacity: 0.9;
  }

  .profile-subtitle {
    font-size: 1.2rem;
    margin: 0;
    color: #ffffff;
    opacity: 0.8;
  }

  /* CV Content */
  .cv-content {
    padding: 4rem 0;
  }

  .cv-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
  }

  /* Main Content */
  .cv-main section {
    margin-bottom: 3rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: calc(var(--section-index, 0) * 0.2s);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .cv-main h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #ffffff;
    position: relative;
    display: inline-block;
  }

  .cv-main h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #d38f41, #64155f);
    border-radius: 2px;
  }

  .experience-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
  }

  .experience-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    border-left: 3px solid #d38f41;
  }

  .experience-header {
    margin-bottom: 1rem;
  }

  .experience-header h3 {
    font-size: 1.5rem;
    margin: 0;
    color: #ffffff;
  }

  .company {
    display: block;
    font-size: 1.1rem;
    color: #ffffff;
    opacity: 0.9;
    margin: 0.5rem 0;
  }

  .date {
    display: block;
    font-size: 0.9rem;
    color: #ffffff;
    opacity: 0.7;
  }

  .achievement-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .achievement-list li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.8rem;
    line-height: 1.6;
    transition: transform 0.3s ease;
  }

  .achievement-list li:hover {
    transform: translateX(5px);
  }

  .achievement-list li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: #d38f41;
  }

  /* Sidebar */
  .cv-sidebar section {
    margin-bottom: 2rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: calc(var(--section-index, 0) * 0.2s + 0.4s);
  }

  .cv-sidebar h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: #ffffff;
    position: relative;
    display: inline-block;
  }

  .cv-sidebar h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #d38f41, #64155f);
    border-radius: 2px;
  }

  .education-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .education-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  .education-item h3 {
    font-size: 1.3rem;
    margin: 0 0 0.5rem 0;
    color: #ffffff;
  }

  .institution {
    display: block;
    font-size: 1.1rem;
    color: #ffffff;
    opacity: 0.9;
    margin: 0.5rem 0;
  }

  .gpa {
    font-size: 1rem;
    color: #ffffff;
    opacity: 0.8;
    margin: 0.5rem 0;
    display: inline-block;
    padding: 0.3rem 0.8rem;
    background: rgba(211, 143, 65, 0.2);
    border-radius: 4px;
  }

  .coursework {
    margin-top: 1rem;
  }

  .coursework h4 {
    font-size: 1rem;
    margin: 0 0 0.5rem 0;
    color: #ffffff;
  }

  .coursework ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .coursework li {
    margin-bottom: 0.5rem;
    color: #ffffff;
    opacity: 0.8;
    transition: transform 0.3s ease;
  }

  .coursework li:hover {
    transform: translateX(5px);
    opacity: 1;
  }

  .skills-grid {
    display: grid;
    gap: 1rem;
  }

  .skill-category {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.08);
  }

  .skill-category h3 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    color: #ffffff;
  }

  .skill-category p {
    margin: 0;
    font-size: 0.9rem;
    color: #ffffff;
    opacity: 0.8;
  }

  .language-list, .interest-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .language-list li, .interest-list li {
    margin-bottom: 0.8rem;
    padding: 0.8rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .language-list li:hover, .interest-list li:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.08);
  }

  /* CTA Section */
  .cta-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(211, 143, 65, 0.5), transparent);
  }

  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #ffffff;
    position: relative;
    display: inline-block;
  }

  .cta-section h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #d38f41, #64155f);
    border-radius: 2px;
  }

  .cta-section p {
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-button.primary {
    background: linear-gradient(90deg, #d38f41, #ff6600);
    color: #ffffff;
    box-shadow: 0 4px 15px rgba(211, 143, 65, 0.4);
  }

  .cta-button.secondary {
    background: transparent;
    color: #ffffff;
    border: 2px solid #d38f41;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(211, 143, 65, 0.5);
  }

  .cta-button.secondary:hover {
    background-color: rgba(211, 143, 65, 0.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .cv-grid {
      grid-template-columns: 1fr;
    }

    .profile-section {
      flex-direction: column;
      text-align: center;
    }

    .profile-image {
      width: 150px;
      height: 150px;
    }

    .profile-info h1 {
      font-size: 2.5rem;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>

<script>
  // Add animation delay to sections
  document.addEventListener('DOMContentLoaded', () => {
    const mainSections = document.querySelectorAll('.cv-main section');
    const sidebarSections = document.querySelectorAll('.cv-sidebar section');
    
    mainSections.forEach((section, index) => {
      (section as HTMLElement).style.setProperty('--section-index', index.toString());
    });
    
    sidebarSections.forEach((section, index) => {
      (section as HTMLElement).style.setProperty('--section-index', index.toString());
    });
  });
</script>
