<button id="download-cv-btn" class="download-cv-button">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
    <polyline points="7 10 12 15 17 10"></polyline>
    <line x1="12" y1="15" x2="12" y2="3"></line>
  </svg>
  Download CV
</button>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const downloadBtn = document.getElementById('download-cv-btn');
    
    if (downloadBtn) {
      downloadBtn.addEventListener('click', generateAndDownloadCV);
    }
    
    function generateAndDownloadCV() {
      // Create a new document
      const doc = document.implementation.createHTMLDocument('Anton Orlov - CV');
      
      // Get the CV content from the page
      const cvContent = document.querySelector('.cv-content');
      const cvHero = document.querySelector('.cv-hero-content');
      
      if (!cvContent || !cvHero) return;
      
      // Create the document structure
      const html = `
        <!DOCTYPE html>
        <html lang="en">
        <head>
          <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
          <title>Anton Orlov - CV</title>
          <style>
            @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');
            
            body {
              font-family: 'Montserrat', sans-serif;
              line-height: 1.6;
              color: #333;
              max-width: 1000px;
              margin: 0 auto;
              padding: 20px;
              background-color: #fff;
            }
            
            .cv-header {
              display: flex;
              align-items: center;
              margin-bottom: 30px;
              padding-bottom: 20px;
              border-bottom: 2px solid #d38f41;
            }
            
            .profile-image {
              width: 120px;
              height: 120px;
              border-radius: 50%;
              overflow: hidden;
              margin-right: 30px;
              border: 3px solid #d38f41;
            }
            
            .profile-image img {
              width: 100%;
              height: 100%;
              object-fit: cover;
            }
            
            .profile-info h1 {
              font-size: 2.5rem;
              margin: 0 0 10px 0;
              color: #333;
            }
            
            .profile-title {
              font-size: 1.2rem;
              margin: 0 0 5px 0;
              color: #555;
            }
            
            .profile-subtitle {
              font-size: 1rem;
              margin: 0;
              color: #777;
            }
            
            .cv-grid {
              display: grid;
              grid-template-columns: 2fr 1fr;
              gap: 30px;
            }
            
            h2 {
              font-size: 1.8rem;
              margin-bottom: 15px;
              color: #333;
              border-bottom: 2px solid #d38f41;
              padding-bottom: 5px;
              display: inline-block;
            }
            
            .experience-item, .education-item, .skill-category {
              margin-bottom: 20px;
              padding: 15px;
              background: #f9f9f9;
              border-radius: 5px;
              border-left: 3px solid #d38f41;
            }
            
            .experience-header h3, .education-item h3 {
              font-size: 1.3rem;
              margin: 0 0 5px 0;
              color: #333;
            }
            
            .company, .institution {
              display: block;
              font-size: 1.1rem;
              color: #555;
              margin: 5px 0;
            }
            
            .date {
              display: block;
              font-size: 0.9rem;
              color: #777;
              margin: 5px 0;
            }
            
            .achievement-list {
              list-style: none;
              padding: 0;
              margin: 10px 0 0 0;
            }
            
            .achievement-list li {
              position: relative;
              padding-left: 20px;
              margin-bottom: 8px;
            }
            
            .achievement-list li::before {
              content: "â€¢";
              position: absolute;
              left: 0;
              color: #d38f41;
            }
            
            .gpa {
              display: inline-block;
              padding: 3px 8px;
              background: rgba(211, 143, 65, 0.2);
              border-radius: 3px;
              font-size: 0.9rem;
              margin: 5px 0;
            }
            
            .coursework ul {
              list-style: none;
              padding: 0;
              margin: 5px 0;
            }
            
            .coursework li {
              margin-bottom: 5px;
              color: #555;
            }
            
            .skills-grid {
              display: grid;
              gap: 10px;
            }
            
            .skill-category h3 {
              font-size: 1.1rem;
              margin: 0 0 5px 0;
              border-bottom: none;
            }
            
            .skill-category p {
              margin: 0;
              font-size: 0.9rem;
              color: #555;
            }
            
            .language-list, .interest-list {
              list-style: none;
              padding: 0;
              margin: 0;
            }
            
            .language-list li, .interest-list li {
              margin-bottom: 8px;
              padding: 8px;
              background: #f9f9f9;
              border-radius: 5px;
            }
            
            @media print {
              body {
                padding: 0;
              }
              
              .cv-header {
                page-break-inside: avoid;
              }
              
              .experience-item, .education-item, .skill-category {
                page-break-inside: avoid;
              }
            }
          </style>
        </head>
        <body>
          <div class="cv-header">
            <div class="profile-image">
              <img src="data:image/jpeg;base64,${getBase64Image('/about-photo.jpg')}" alt="Anton Orlov">
            </div>
            <div class="profile-info">
              <h1>Anton Orlov</h1>
              <p class="profile-title">Entrepreneur & Business Administration Student</p>
              <p class="profile-subtitle">Webster University Vienna</p>
            </div>
          </div>
          
          <div class="cv-grid">
            <div class="cv-main">
              ${cvContent.innerHTML}
            </div>
          </div>
        </body>
        </html>
      `;
      
      // Set the document content
      doc.documentElement.innerHTML = html;
      
      // Convert the document to a Blob
      const serializer = new XMLSerializer();
      const source = serializer.serializeToString(doc);
      const blob = new Blob([source], { type: 'text/html' });
      
      // Create a download link
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'Anton_Orlov_CV.html';
      document.body.appendChild(a);
      a.click();
      
      // Clean up
      setTimeout(() => {
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }, 100);
    }
    
    // Function to convert an image to base64
    function getBase64Image(imgPath: string) {
      // This is a placeholder - in a real implementation, you would need to
      // fetch the image and convert it to base64. For simplicity, we're
      // returning a placeholder base64 string.
      return 'data:image/jpeg;base64,';
    }
  });
</script>

