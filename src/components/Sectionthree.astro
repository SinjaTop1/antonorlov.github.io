<style>
    /* Section styling */
    .section-three {
        padding: 6rem 2rem;
        background-color: #161616;
        position: relative;
    }
    
    .section-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .heading {
        text-align: center;
        margin-bottom: 4rem;
        position: relative;
    }
    
    .heading h1 {
        font-size: 2.8rem;
        font-weight: 600;
        color: #ffffff;
        position: relative;
        display: inline-block;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
    }
    
    .heading-underline {
        height: 3px;
        width: 80px;
        background: linear-gradient(90deg, #955f21, #d38f41);
        margin: 0 auto;
    }
    
    /* Projects container */
    .projects-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.5rem;
        justify-content: center;
    }
    
    .project-card {
        background-color: #1f1f1f;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.4s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .project-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        border-color: rgba(211, 143, 65, 0.3);
    }
    
    .card-image {
        width: 100%;
        height: 220px;
        overflow: hidden;
        position: relative;
    }
    
    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
    }
    
    .project-card:hover .card-image img {
        transform: scale(1.08);
    }
    
    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(0deg, rgba(149, 95, 33, 0.8), rgba(211, 143, 65, 0.4));
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: all 0.3s ease;
    }
    
    .project-card:hover .card-overlay {
        opacity: 1;
    }
    
    .overlay-link {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        text-decoration: none;
    }
    
    .view-project {
        color: white;
        font-weight: 600;
        letter-spacing: 0.5px;
        background-color: rgba(0, 0, 0, 0.4);
        padding: 0.8rem 1.2rem;
        border-radius: 4px;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }
    
    .project-card:hover .view-project {
        transform: translateY(0);
    }
    
    .overlay-link:hover .view-project {
        background-color: rgba(0, 0, 0, 0.6);
    }
    
    .card-content {
        padding: 1.8rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    
    .card-content h2 {
        color: #ffffff;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        font-weight: 600;
        transition: color 0.3s ease;
    }
    
    .project-card:hover .card-content h2 {
        color: #d38f41;
    }
    
    .card-content p {
        color: #a0a0a0;
        margin-bottom: 1.5rem;
        line-height: 1.6;
        font-size: 0.95rem;
    }
    
    .card-link {
        margin-top: auto;
    }
    
    .card-link a {
        color: #d38f41;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        padding-bottom: 3px;
        border-bottom: 1px solid transparent;
    }
    
    .card-link a:hover {
        color: #e6a64d;
        border-bottom-color: #e6a64d;
    }
    
    .card-link a svg {
        transition: transform 0.3s ease;
    }
    
    .card-link a:hover svg {
        transform: translateX(5px);
    }
    
    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .projects-container {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }
    }
    
    @media (max-width: 768px) {
        .section-three {
            padding: 4rem 1.5rem;
        }
        
        .heading h1 {
            font-size: 2.2rem;
        }
    }
    
    @media (max-width: 640px) {
        .projects-container {
            grid-template-columns: 1fr;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .card-content {
            padding: 1.5rem;
        }
    }
</style>