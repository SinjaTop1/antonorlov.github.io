<style>
    /* Section styling */
    .section-three {
        padding: 5rem 2rem;
        margin: 0 auto;
        background-color: #161616;
    }
    
    .heading {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .heading h1 {
        font-size: 2.5rem;
        color: #ffffff;
        position: relative;
        display: inline-block;
        padding-bottom: 0.5rem;
    }
    
    .heading h1::after {
        content: '';
        position: absolute;
        width: 50%;
        height: 3px;
        background-color: #db9034;
        bottom: 0;
        left: 25%;
    }
    
    /* Container and cards */
    .container {
        align-items: center;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }
    
    .card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        cursor: pointer;
    }
    
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }
    
    .card-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }
    
    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .card:hover .card-image img {
        transform: scale(1.05);
    }
    
    .card-content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    
    .card-content h2 {
        color: #2c3e50;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        transition: color 0.3s ease;
    }
    
    .card:hover .card-content h2 {
        color: #3498db;
    }
    
    .card-content p {
        color: #7f8c8d;
        margin-bottom: 1rem;
        line-height: 1.6;
    }
    
    .card-link {
        margin-top: auto;
        text-align: right;
    }
    
    .card-link a {
        color: #3498db;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }
    
    .card-link a:hover {
        color: #2980b9;
        transform: translateX(5px);
    }
</style>