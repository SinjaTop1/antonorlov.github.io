<script>
  // Optimized reveal animation script with debounce
  document.addEventListener("DOMContentLoaded", () => {
    // Reveal elements on scroll
    const revealElements: NodeListOf<HTMLElement> = document.querySelectorAll(".reveal-element");
    
    // Debounce scroll function to improve performance
    let isScrolling: number;
    function debouncedCheckScroll(): void {
      window.clearTimeout(isScrolling);
      isScrolling = window.setTimeout(() => {
        checkScroll();
      }, 20);
    }
    
    function checkScroll(): void {
      const windowHeight: number = window.innerHeight;
      revealElements.forEach((element: HTMLElement) => {
        const elementTop: number = element.getBoundingClientRect().top;
        if (elementTop < windowHeight - 100) {
          element.classList.add("revealed");
        }
      });
    }

    // Initial check
    checkScroll();
    
    // Check on scroll with debounce
    window.addEventListener("scroll", debouncedCheckScroll, { passive: true });
  });
</script>

