    font-size: 0.9rem;
    letter-spacing: 0.15em;
  }
  
  .content-wrapper {
    padding: 1.5rem;
  }
  
  .gradient-text {
    font-size: 1.5rem;
  }
  
  .mission-statement {
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .key-points {
    gap: 1rem;
  }
  
  .key-point {
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1rem;
  }
  
  .icon-wrapper {
    margin-bottom: 0.8rem;
  }
  
  .cta-button {
    padding: 0.8rem 1.5rem;
    font-size: 0.9rem;
  }
  
  .arrow-icon {
    width: 16px;
    height: 16px;
  }
  
  :global(.embla__button) {
    width: 32px;
    height: 32px;
  }
}
</style>