  padding: 2rem;
  min-width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.content-wrapper {
  max-width: 600px;
  margin: 0 auto;
  background: rgba(0, 0, 0, 0.6); /* More opacity for better contrast with background */
  padding: 2rem;
  border-radius: 10px;
  backdrop-filter: blur(10px); /* Increased blur for more effect */
  border: 1px solid rgba(211, 143, 65, 0.1); /* Subtle border */
}

.BSC-left h2 {
  font-size: 1.8rem;
  text-align: center;
  margin-bottom: 1.5rem;
  color: #ffffff;
  font-weight: 700;
}

/* Adding the keyframe animation */
@keyframes gradientAnimation {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.mission-statement {
