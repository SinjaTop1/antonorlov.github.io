<script>
  // Optimized reveal animation script with Intersection Observer
  document.addEventListener("DOMContentLoaded", () => {
    const revealElements = document.querySelectorAll(".reveal-element");
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px"
    });

    revealElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>

<style>
.next-section {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  padding: 6rem 2rem;
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  overflow: hidden;
}

.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.glass-effect {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
}

.section-heading {
  width: 100%;
  margin-bottom: 4rem;
  text-align: center;
  position: relative;
  z-index: 1;
}

.section-heading h1 {
  font-size: 4rem;
  font-weight: 800;
  background: linear-gradient(45deg, #d38f41, #ff6600, #64155f);
  background-size: 200% 200%;
  animation: gradientFlow 8s ease infinite;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  margin-bottom: 1rem;
}

.subtitle-wrapper {
  position: relative;
  display: inline-block;
}

.section-heading h2 {
  font-size: 1.2rem;
  color: #ffffff;
  text-transform: uppercase;
  letter-spacing: 0.3em;
  opacity: 0.8;
}

.BSC-left {
  flex: 1;
  padding: 2rem;
  min-width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.content-wrapper {
  max-width: 600px;
  margin: 0 auto;
  padding: 3rem;
  border-radius: 20px;
  transition: transform 0.3s ease;
}

.content-wrapper:hover {
  transform: translateY(-5px);
}

.gradient-text {
  font-size: 2.2rem;
  background: linear-gradient(45deg, #ffffff, #d38f41);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
  margin-bottom: 2rem;
}

.mission-statement {
  text-align: center;
  font-size: 1.3rem;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 3rem;
  font-weight: 400;
}

.key-points {
  display: grid;
  gap: 2rem;
  margin-bottom: 3rem;
}

.key-point {
  display: flex;
  align-items: flex-start;
  gap: 1.5rem;
  padding: 1.5rem;
  border-radius: 12px;
  transition: all 0.3s ease;
}

.key-point:hover {
  background: rgba(255, 255, 255, 0.05);
  transform: translateX(10px);
}

.icon-wrapper {
  background: linear-gradient(135deg, rgba(211, 143, 65, 0.2), rgba(100, 21, 95, 0.2));
  padding: 1rem;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  font-size: 1.5rem;
}

.key-point p {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.1rem;
  line-height: 1.6;
  margin: 0;
}

.cta-container {
  text-align: center;
  margin-top: 2rem;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  background: linear-gradient(45deg, #d38f41, #ff6600);
  color: white;
  text-decoration: none;
  border-radius: 30px;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(211, 143, 65, 0.3);
}

.arrow-icon {
  width: 20px;
  height: 20px;
  transition: transform 0.3s ease;
}

.cta-button:hover .arrow-icon {
  transform: translateX(5px);
}

.BSC-right {
  flex: 1;
  padding: 2rem;
  min-width: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.carousel-wrapper {
  width: 100%;
  max-width: 800px;
  aspect-ratio: 16/9;
  border-radius: 20px;
  overflow: hidden;
  margin: 0 auto;
}

:global(.embla) {
  width: 100%;
  height: 100%;
}

:global(.embla__viewport) {
  width: 100%;
  height: 100%;
}

:global(.embla__container) {
  width: 100%;
  height: 100%;
  display: flex;
}

:global(.embla__slide) {
  flex: 0 0 100%;
  min-width: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

:global(.embla__slide img) {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
}

:global(.embla__button) {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

:global(.embla__button:hover) {
  background-color: rgba(255, 255, 255, 0.95);
  transform: scale(1.1);
}

:global(.embla__button--prev) {
  left: 10px;
}

:global(.embla__button--next) {
  right: 10px;
}

.reveal-element {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.reveal-element.revealed {
  opacity: 1;
  transform: translateY(0);
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Responsive Styles */
