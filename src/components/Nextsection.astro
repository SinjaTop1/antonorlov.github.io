    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const revealElements = document.querySelectorAll(".reveal-element");
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px"
    });

    revealElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>

<style>
.next-section {
  position: relative;
  padding: 8rem 2rem;
  background: #0a0a0a;
  overflow: hidden;
}

.section-content {
  max-width: 1400px;
  margin: 0 auto;
}

.section-header {
  text-align: center;
  margin-bottom: 6rem;
}

.section-label {
  display: inline-block;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: #d38f41;
  margin-bottom: 1rem;
}

.section-header h1 {
  font-size: 4rem;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: -0.02em;
}

.section-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: start;
}

.content-column {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.content-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 1rem;
  padding: 3rem;
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.content-card h2 {
  font-size: 2rem;
  color: #ffffff;
  margin-bottom: 1.5rem;
  line-height: 1.2;
  text-align: center;
}

.mission-statement {
  font-size: 1.125rem;
  line-height: 1.7;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 3rem;
  text-align: center;
  max-width: 600px;
}

.key-points {
  display: grid;
  gap: 2rem;
  margin-bottom: 3rem;
  width: 100%;
}

.key-point {
  display: flex;
  align-items: flex-start;
  gap: 1.25rem;
  text-align: left;
}

.icon {
  font-size: 1.5rem;
  background: rgba(211, 143, 65, 0.1);
  padding: 0.75rem;
  border-radius: 0.75rem;
  flex-shrink: 0;
}

.key-point p {
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  margin: 0;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 2rem;
  background: #d38f41;
  color: white;
  text-decoration: none;
  border-radius: 0.5rem;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cta-button:hover {
  background: #c17d2f;
  transform: translateY(-2px);
}

.arrow-icon {
  width: 1.25rem;
  height: 1.25rem;
  transition: transform 0.3s ease;
}

.cta-button:hover .arrow-icon {
  transform: translateX(4px);
}

.carousel-column {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.carousel-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 1rem;
  overflow: hidden;
  aspect-ratio: 4/3;
  width: 100%;
  margin: 0 auto;
}

:global(.embla__slide) {
  flex: 0 0 100%;
  min-width: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
}

:global(.embla__slide img) {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.reveal-element {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.reveal-element.revealed {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 1024px) {
  .next-section {
    padding: 6rem 1.5rem;
  }

  .section-header {
    margin-bottom: 4rem;
  }

  .section-header h1 {
    font-size: 3.5rem;
  }

  .section-grid {
    gap: 3rem;
  }

  .content-card {
    padding: 2.5rem;
  }
}

@media (max-width: 768px) {
  .next-section {
    padding: 4rem 1rem;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-header h1 {
    font-size: 3rem;
  }

  .section-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .content-card {
    padding: 2rem;
  }

  .content-card h2 {
    font-size: 1.75rem;
  }

  .mission-statement {
    font-size: 1rem;
  }

  .carousel-card {
    aspect-ratio: 16/9;
  }
}

@media (max-width: 480px) {
  .next-section {
    padding: 3rem 0.75rem;
  }

  .section-header h1 {
    font-size: 2.5rem;
  }

  .content-card {
    padding: 1.5rem;
  }

  .key-point {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .icon {
    margin-bottom: 0.5rem;
  }
}
</style>