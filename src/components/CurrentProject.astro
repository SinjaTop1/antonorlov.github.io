  flex-direction: column;
  gap: 3rem;
}

.program-flow {
  display: grid;
  gap: 2rem;
}

.flow-step {
  display: flex;
  gap: 1.5rem;
  align-items: flex-start;
  position: relative;
}

.flow-step:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 1.25rem;
  top: 3rem;
  bottom: -2rem;
  width: 2px;
  background: rgba(211, 143, 65, 0.2);
}

